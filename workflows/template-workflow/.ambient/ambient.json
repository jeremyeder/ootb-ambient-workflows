  // ----------------------------------------------------------------------------
  // results (OPTIONAL) - object with string values
  // ----------------------------------------------------------------------------
  // Defines the key output artifacts generated by this workflow and where
  // they can be found. This helps users and the system understand what files
  // are created and where to look for them.
  //
  // Structure:
  // - Each key is a human-readable name for an artifact type
  // - Each value is a file path or glob pattern relative to the workspace
  //
  // Best practices:
  // - Use descriptive names for artifact types
  // - Use glob patterns (*) to match multiple files
  // - Use ** to match nested directories
  // - Organize outputs in the artifacts/ directory
  // - Group related artifacts in subdirectories
  //
  // Common patterns:
  // - Single file: "artifacts/output.md"
  // - Multiple files in a directory: "artifacts/specs/*.md"
  // - Nested directories: "artifacts/specs/**/*.md"
  // - Specific file types: "artifacts/**/*.json"
  //
  // Examples:
  // {
  //   "Feature Specification": "artifacts/specs/**/spec.md",
  //   "Implementation Plan": "artifacts/specs/**/plan.md",
  //   "Task Breakdown": "artifacts/specs/**/tasks.md",
  //   "Test Results": "artifacts/test-results/**/*.xml",
  //   "Code Coverage": "artifacts/coverage/coverage.json"
  // }
  //
  // Use cases:
  // - Document what outputs the workflow produces
  // - Help users locate generated files
  // - Enable automated artifact collection
  // - Support workflow chaining (one workflow's outputs as another's inputs)
  // ----------------------------------------------------------------------------
  "results": {
    // Specification documents created during the analysis/planning phase
    "Specifications": "artifacts/specs/**/*.md",

    // Implementation plans detailing technical approach
    "Implementation Plans": "artifacts/plans/**/*.md",

    // Task breakdowns for execution
    "Task Lists": "artifacts/tasks/**/*.md",

    // Generated code and implementation artifacts
    "Implementation Artifacts": "artifacts/implementation/**/*",

    // Documentation and reports
    "Documentation": "artifacts/docs/**/*.md",

    // Verification and test results
    "Verification Results": "artifacts/verification/**/*.md",

    // Any JSON configuration or data files
    "Configuration Files": "artifacts/**/*.json",

    // Generated diagrams or images
    "Diagrams": "artifacts/**/*.{png,jpg,svg,mmd}",

    // Log files from workflow execution
    "Execution Logs": "artifacts/logs/**/*.log"
  }

